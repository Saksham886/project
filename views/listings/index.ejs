<% layout("/layouts/boilerplate") %>

<body>
    <br>
    <style>
        #filter{
            display: flex;
            flex-wrap: wrap;
        }
        .filter-content{
            
            text-align: center;
            margin-right: 2rem;
            margin-top: 1rem;
            margin-bottom: 1rem;
            opacity: 0.8;
        }
        .filter-content:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter-content p {
            font-size: 0.8 rem;
        }
    </style>
    <div id="filter">
        <div class="filter-content">
        <i class="fa-solid fa-fire "></i>
        <p>Trending</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic cities</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
    </div>
    <div class="filter-content">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing pools</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
    </div>
    <div class="filter-content">
        <i class="fa-solid fa-tractor"></i>
        <p>Farms</p>
    </div>
    </div>
    
    
    <h3>ALL LISTINGS</h3>
    <!-- <form method="GET" action="listings/new">
        <button>Create new</button>
    </form> -->
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
         <% for (let list of alllisting){%>
            <a href="/listings/<%=list._id%>" class="list-link">
    <div class="card col listing-card" >
        
        
        <img src="<%=list.image.url%>" class="card-img-top" alt="Image" style="height: 20rem;">
    <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%= list.title%></b><br><%=list.location%>,<%=list.country%><br> &#8377 <%= list.price.toLocaleString("en-IN") %>\night</p>
        </div>
    
      </div>
      <%}%>
    </div>
